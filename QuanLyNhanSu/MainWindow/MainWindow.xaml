<Window x:Class="QuanLyNhanSu.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyNhanSu"
        mc:Ignorable="d"
        Title="QUẢN LÝ NHÂN SỰ" 
        FontSize="15" Height="768" Width="1024"  
        Background="WhiteSmoke" ResizeMode="CanResize"  
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Closing="Window_Closing" >
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="MediumBlue"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="TabMain">
            <TabItem Name="tabItemThongTin" Header="THÔNG TIN" IsSelected="True" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid VerticalAlignment="Top"  Margin="22,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnThemNhanSu" Click="btnThemNhanSu_Click" Grid.Column="0" Margin="0,0,2.5,0"
                                    Style="{StaticResource LinkButton}" FontWeight="Normal">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/addIcon.png" Height="30"/>
                                    <Label Content="_THÊM NHÂN SỰ" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnXoaNhanSu" Click="btnXoaNhanSu_Click" Grid.Column="1" Margin="2.5,0"
                                    Style="{StaticResource LinkButton}" FontWeight="Normal">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Foreground="White" Height="30" Width="30" Kind="DeleteEmpty"/>
                                    <Label VerticalAlignment="Center" Content="_XÓA NHÂN SỰ"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnTraCuuNhanSu" Click="btnTraCuuNhanSu_Click" Grid.Column="2" Margin="2.5,0"
                                    Style="{StaticResource LinkButton}" FontWeight="Normal">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/infoIcon.png" Height="30"/>
                                    <Label VerticalAlignment="Center" Content="TRA CỨU _NHÂN SỰ"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnSuaThongTin" Click="btnSuaThongTin_Click" Grid.Column="3" Margin="2.5,0"
                                    Style="{StaticResource LinkButton}" FontWeight="Normal">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/revisionIcon.png" Height="30"/>
                                    <Label VerticalAlignment="Center" Content="_SỬA THÔNG TIN"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnXuatDanhSach" Grid.Column="4" Margin="2.5,0,0,0"
                                    Click="btnXuatDanhSach_Click"
                                    Style="{StaticResource LinkButton}" FontWeight="Normal">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Foreground="White" Height="30" Width="30" Kind="FilePdf"/>
                                    <Label VerticalAlignment="Center" Content="_XUẤT DANH SÁCH"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <ListView x:Name="lstvThongTin" Margin="22,60,22,66" Foreground="MediumBlue"  
                                  SelectionChanged="lstvThongTin_SelectionChanged" MouseDoubleClick="lstvThongTin_MouseDoubleClick" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Họ và tên" Width="150" DisplayMemberBinding="{Binding HoTen}">
                                    </GridViewColumn>
                                    <GridViewColumn Header="CMND/CCCD" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CMND}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Mã n.viên" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MaNhanVien}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="G.tính" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding GioiTinh}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ngày sinh" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NgaySinh}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Quê quán" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding QueQuan}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Số điện thoại" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SoDienThoai}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Bộ phận" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding BoPhan}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Chức vụ" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChucVu}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ngày vào" Width="110">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NgayVao}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel VerticalAlignment="Bottom" Margin="22"
                            Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label Foreground="MediumBlue">Hiện tại có</Label>
                            <Label Foreground="MediumBlue" Content="{Binding ElementName=lstvThongTin, Path=Items.Count, Mode=OneWay}"/>
                            <Label Foreground="MediumBlue">nhân sự trong danh sách</Label>
                        </StackPanel>
                        <Button x:Name="btnNapLaiNhanSu" Height="50" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                                Background="{x:Null}" BorderBrush="{x:Null}" 
                                Click="btnNapLaiNhanSu_Click" Margin="22,0,0,11">
                            <materialDesign:PackIcon Height="50" Width="50" 
                                Kind="Autorenew" Style="{StaticResource ForegroundGradient}" />
                        </Button>
                    </Grid>
                    <Grid Grid.Row="0" Margin="22">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="imgAnhDaiDien" Grid.Column="0"
                               Source="/PICTURE/avatar.png"
                            Height="186" Width="139.5" HorizontalAlignment="Left"                            
                            MouseRightButtonUp="imgAnhDaiDien_MouseRightButtonUp" Stretch="Fill">
                            <Image.ToolTip>
                                <ToolTip HasDropShadow="False" VerticalAlignment="Bottom">
                                    Nhấp phải chuột để tải ảnh (3x4) lên
                                </ToolTip>
                            </Image.ToolTip>
                        </Image>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="0.8*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Foreground="Black" HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Họ và tên"/>
                                        <TextBox x:Name="txtHoVaTen" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="240" TextChanged="txtHoVaTen_TextChanged"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Foreground="Black" HorizontalAlignment="Left" Content="CMND/CCCD" VerticalContentAlignment="Center"/>
                                        <TextBox x:Name="txtCMND_CCCD" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="140" TextChanged="txtCMND_CCCD_TextChanged"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Foreground="Black" HorizontalAlignment="Right" Content="Giới tính" VerticalContentAlignment="Center"/>
                                        <ComboBox Name="cboGioiTinh" SelectedValuePath="Content" Width="90" VerticalAlignment="Center">
                                            <ComboBoxItem Content="Nam"/>
                                            <ComboBoxItem Content="Nữ"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="0.8*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Label Foreground="Black" HorizontalAlignment="Left" Content="Mã nhân viên" VerticalContentAlignment="Center">
                                        <Label.ToolTip>
                                            <ToolTip HasDropShadow="False" VerticalAlignment="Bottom">
                                                Mã nhân viên được cấp tự động, không thể thay đổi
                                            </ToolTip>
                                        </Label.ToolTip>
                                    </Label>
                                    <TextBox x:Name="txtMaNhanVien" Background="WhiteSmoke" IsEnabled="False" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="189">
                                        <TextBox.ToolTip>
                                            Mã nhân viên được cấp tự động, không thể thay đổi
                                        </TextBox.ToolTip>
                                    </TextBox>
                                    <Button x:Name="btnCopyMaNhanVien" HorizontalAlignment="Right" Margin="2.5" VerticalAlignment="Center" Width="22" Height="22" Click="btnCopyMaNhanVien_Click">
                                        <Image Source="/PICTURE/copyIcon.png" Margin="1"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <Label Foreground="Black" HorizontalAlignment="Left" Content="Ngày sinh" VerticalContentAlignment="Center"/>
                                    <DatePicker Name="dtpNgaySinh" VerticalAlignment="Center" Width="160"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="0.8*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Label Foreground="Black" HorizontalAlignment="Left" Content="Quê quán" VerticalContentAlignment="Center"/>
                                    <ComboBox Name="cboQueQuan" SelectedValuePath="Content" VerticalAlignment="Center" Width="240" HorizontalAlignment="Right">
                                        <ComboBoxItem Content="An Giang"/>
                                        <ComboBoxItem Content="Bà Rịa - Vũng Tàu"/>
                                        <ComboBoxItem Content="Bắc Giang"/>
                                        <ComboBoxItem Content="Bắc Kạn"/>
                                        <ComboBoxItem Content="Bạc Liêu"/>
                                        <ComboBoxItem Content="Bắc Ninh"/>
                                        <ComboBoxItem Content="Bến Tre"/>
                                        <ComboBoxItem Content="Bình Định"/>
                                        <ComboBoxItem Content="Bình Dương"/>
                                        <ComboBoxItem Content="Bình Phước"/>
                                        <ComboBoxItem Content="Bình Thuận"/>
                                        <ComboBoxItem Content="Cà Mau"/>
                                        <ComboBoxItem Content="Cần Thơ"/>
                                        <ComboBoxItem Content="Cao Bằng"/>
                                        <ComboBoxItem Content="Đà Nẵng"/>
                                        <ComboBoxItem Content="Đắk Lắk"/>
                                        <ComboBoxItem Content="Đắk Nông"/>
                                        <ComboBoxItem Content="Điện Biên"/>
                                        <ComboBoxItem Content="Đồng Nai"/>
                                        <ComboBoxItem Content="Đồng Tháp"/>
                                        <ComboBoxItem Content="Gia Lai"/>
                                        <ComboBoxItem Content="Hà Giang"/>
                                        <ComboBoxItem Content="Hà Nam"/>
                                        <ComboBoxItem Content="Hà Nội"/>
                                        <ComboBoxItem Content="Hà Tĩnh"/>
                                        <ComboBoxItem Content="Hải Dương"/>
                                        <ComboBoxItem Content="Hải Phòng"/>
                                        <ComboBoxItem Content="Hậu Giang"/>
                                        <ComboBoxItem Content="Hòa Bình"/>
                                        <ComboBoxItem Content="Hưng Yên"/>
                                        <ComboBoxItem Content="Khánh Hòa"/>
                                        <ComboBoxItem Content="Kiên Giang"/>
                                        <ComboBoxItem Content="Kon Tum"/>
                                        <ComboBoxItem Content="Lai Châu"/>
                                        <ComboBoxItem Content="Lâm Đồng"/>
                                        <ComboBoxItem Content="Lạng Sơn"/>
                                        <ComboBoxItem Content="Lào Cai"/>
                                        <ComboBoxItem Content="Long An"/>
                                        <ComboBoxItem Content="Nam Định"/>
                                        <ComboBoxItem Content="Nghệ An"/>
                                        <ComboBoxItem Content="Ninh Bình"/>
                                        <ComboBoxItem Content="Ninh Thuận"/>
                                        <ComboBoxItem Content="Phú Thọ"/>
                                        <ComboBoxItem Content="Phú Yên"/>
                                        <ComboBoxItem Content="Quảng Bình"/>
                                        <ComboBoxItem Content="Quảng Nam"/>
                                        <ComboBoxItem Content="Quảng Ngãi"/>
                                        <ComboBoxItem Content="Quảng Ninh"/>
                                        <ComboBoxItem Content="Quảng Trị"/>
                                        <ComboBoxItem Content="Sóc Trăng"/>
                                        <ComboBoxItem Content="Sơn La"/>
                                        <ComboBoxItem Content="Tây Ninh"/>
                                        <ComboBoxItem Content="Thái Bình"/>
                                        <ComboBoxItem Content="Thái Nguyên"/>
                                        <ComboBoxItem Content="Thanh Hóa"/>
                                        <ComboBoxItem Content="Thừa Thiên Huế"/>
                                        <ComboBoxItem Content="Tiền Giang"/>
                                        <ComboBoxItem Content="Thành phố Hồ Chí Minh"/>
                                        <ComboBoxItem Content="Trà Vinh"/>
                                        <ComboBoxItem Content="Tuyên Quang"/>
                                        <ComboBoxItem Content="Vĩnh Long"/>
                                        <ComboBoxItem Content="Vĩnh Phúc"/>
                                        <ComboBoxItem Content="Yên Bái"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <Label Foreground="Black" Content="Số điện thoại" VerticalContentAlignment="Center"/>
                                    <TextBox x:Name="txtSoDienThoai" TextWrapping="Wrap" VerticalAlignment="Center" Width="140" TextChanged="txtSoDienThoai_TextChanged"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.85*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Label Foreground="Black" Content="Bộ phận" VerticalContentAlignment="Center"/>
                                    <TextBox Name="txtBoPhan" IsEnabled="False" Background="WhiteSmoke" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <Label Foreground="Black" Content="Chức vụ" VerticalContentAlignment="Center"/>
                                    <TextBox x:Name="txtChucVu" Background="WhiteSmoke" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                                    <Label Foreground="Black" Content="Ngày vào" VerticalContentAlignment="Center"/>
                                    <DatePicker x:Name="dtpNgayVao" HorizontalAlignment="Right" VerticalAlignment="Center" Width="160"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="TỔ CHỨC">
                <Grid Width="1024" HorizontalAlignment="Center">
                    <local:ListBoPhan Height="500" Width="350"/>
                </Grid>
            </TabItem>
            <TabItem Header="CHẤM CÔNG">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400*"/>
                        <ColumnDefinition Width="438*"/>
                        <ColumnDefinition Width="438*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <StackPanel>
                            <Calendar HorizontalAlignment="Left" VerticalAlignment="Top" Width="317" Grid.ColumnSpan="2"/>
                            <local:ListBoPhan x:Name="KT_ListBoPhan1" Margin="22" Height="358" />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" >
                                        <StackPanel>
                                            <Label Style="{StaticResource BackgroundGradient}" x:Name="lblTenNhanVien" Content="Tên Nhân viên" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="173" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="31" Padding="0" Grid.Column="1">
                                            </Label>
                                            <Label Style="{StaticResource BackgroundGradient}" x:Name="lblChucVu" Content="Chức vụ" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="173" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="26" Padding="0" Grid.Column="1">
                                            </Label>
                                            <Label Style="{StaticResource BackgroundGradient}" x:Name="lblMaNV" Content="Mã Nhân viên" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="173" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0"/>
                                        </StackPanel>
                                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblLuongNhanVien" Content="Lương Nhân Viên" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="173" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" Margin="0,134,0,0"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel>
                                            <TextBox  x:Name="txtTenNhanVien" HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Grid.Column="1"/>
                                            <TextBox  x:Name="txtChucVuNhanVien" HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Grid.Column="1"/>
                                            <TextBox  x:Name="txtMaNV" HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Grid.Column="1"/>
                                        </StackPanel>
                                        <TextBox  x:Name="txtLuongNhanVien" HorizontalAlignment="Left" Height="30"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="0,134,0,0"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblTenNhanVien_ChamCong" Content="Tên Nhân viên" HorizontalAlignment="Center" VerticalAlignment="Top" Width="326" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="10,45,10,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblLuong" Content="Lương" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="10,126,0,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblSoNgayChamCong" Content="Số ngày chấm công" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="191,187,0,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblSoGioTangCa" Content="Số giờ tăng ca" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="10,187,0,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblSoNgayVeSom" Content="Số ngày về sớm" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="191,126,0,0"/>
                        <TextBox  x:Name="txtTenNhanVien_TinhLuong" HorizontalAlignment="Center" Height="27" TextWrapping="Wrap"  VerticalAlignment="Top" Width="326" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="10,74,10,0"/>
                        <TextBox  x:Name="txtLuong_TinhLuong" HorizontalAlignment="Left" Height="27"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="10,155,0,0"/>
                        <TextBox  x:Name="txtSoNgayChamCong_TinhLuong" HorizontalAlignment="Right" Height="27" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="191,216,0,0"/>
                        <TextBox  x:Name="txtSoGioTangCa_TinhLuong" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="10,216,0,0"/>
                        <TextBox  x:Name="txtSoNgayVeSom_TinhLuong" HorizontalAlignment="Right" Height="27" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="191,155,0,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblSoNgayDiMuon_TinhLuong" Content="Số ngày đi muộn" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="191,248,0,0"/>
                        <TextBox  x:Name="txtSoNgayDiMuon_TinhLuong" HorizontalAlignment="Right" Height="27"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="190,282,0,0"/>
                        <Label Style="{StaticResource BackgroundGradient}" x:Name="lblTroCapHangThang_TinhLuong" Content="Trợ cấp hàng tháng" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Height="29" Padding="0" FontSize="14" Margin="10,248,0,0"/>
                        <TextBox  x:Name="txtTroCapHangThang_TinhLuong" HorizontalAlignment="Left" Height="27"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" Opacity="0.4" HorizontalContentAlignment="Center" Margin="10,282,0,0"/>
                        <Button x:Name="btnTinhLuong" Content="Tính Lương" FontSize="25"  Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Height="46" Margin="68,356,78,277"/>

                    </Grid>






                </Grid>
            </TabItem>
            <TabItem Header="KHEN THƯỞNG">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,22,0">
                        <!--dòng 1-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.35*"/>
                            <ColumnDefinition Width="0.06*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <local:ListBoPhan x:Name="KT_ListBoPhan" Margin="22" />
                        </Grid>
                        <Grid Grid.Column="2" Margin="15,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="0,0,20,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
