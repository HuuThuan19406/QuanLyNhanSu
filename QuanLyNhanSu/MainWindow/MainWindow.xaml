<Window x:Class="QuanLyNhanSu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanSu"
        mc:Ignorable="d"
        Title="QUẢN LÝ NHÂN SỰ" 
        FontSize="{Binding Value, ElementName=sliderFontSize}" FontFamily="{Binding Text, ElementName=cboKieuChu}" 
        Height="768" Width="1024"  
        Background="WhiteSmoke" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closing="Window_Closing" >

    <Grid x:Name="gridMainWindow">
        <TabControl x:Name="TabMain" Margin="0,0,-0.4,0.4">
            <TabItem Name="tabItemThongTin" Header="THÔNG TIN" IsSelected="True" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid VerticalAlignment="Top" Margin="22,0,22,0" Height="{Binding Height, ElementName=btnThemNhanSu}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnThemNhanSu" Click="btnThemNhanSu_Click" Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/addIcon.png" Height="30"/>
                                    <TextBlock Text="THÊM NHÂN SỰ" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnXoaNhanSu" Click="btnXoaNhanSu_Click" Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/deleteIcon.png" Height="30"/>
                                    <TextBlock VerticalAlignment="Center" Text="XÓA NHÂN SỰ"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnTraCuuNhanSu" Click="btnTraCuuNhanSu_Click" Grid.Column="2">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/infoIcon.png" Height="30"/>
                                    <TextBlock VerticalAlignment="Center" Text="TRA CỨU NHÂN SỰ"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnSuaThongTin" Click="btnSuaThongTin_Click" Grid.Column="3">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/revisionIcon.png" Height="30"/>
                                    <TextBlock VerticalAlignment="Center" Text="SỬA THÔNG TIN"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnXuatDanhSach" Grid.Column="4">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/exportFileIcon.png" Height="30"/>
                                    <TextBlock VerticalAlignment="Center" Text="XUẤT DANH SÁCH"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <ListView x:Name="lstvThongTin" Margin="22,61,22,66"  SelectionChanged="lstvThongTin_SelectionChanged" MouseDoubleClick="lstvThongTin_MouseDoubleClick" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Họ và tên" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding HoTen}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="CMND/CCCD" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CMND}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Mã n.viên" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MaNhanVien}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="G.tính" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding GioiTinh}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ngày sinh" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NgaySinh}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Quê quán" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding QueQuan}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Số điện thoại" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SoDienThoai}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Bộ phận" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding BoPhan}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Chức vụ" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChucVu}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ngày vào" Width="110">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NgayVao}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <TextBlock x:Name="txbSoNhanSu" Text="//Text will show in here" HorizontalAlignment="Right" Margin="0,0,22,22" Foreground="Blue" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <Image x:Name="imgNapLaiThongTin" Source="pack://application:,,,/QuanLyNhanSu;component/PICTURE/loadData.png" Height="50" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="22,0,0,11"  MouseDown="imgNapLaiThongTin_MouseDown">
                            <Image.ToolTip>
                                <ToolTip>
                                    Nạp lại danh sách
                                </ToolTip>
                            </Image.ToolTip>
                        </Image>
                    </Grid>
                    <Grid Grid.Row="0">
                        <Image x:Name="imgAnhDaiDien" 
                            Height="186" Width="139.5"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,0,0"
                            MouseRightButtonUp="imgAnhDaiDien_MouseRightButtonUp" Stretch="Fill">
                            <Image.ToolTip>
                                <ToolTip HasDropShadow="False" VerticalAlignment="Bottom">
                                    Nhấp phải chuột để tải ảnh (3x4) lên
                                </ToolTip>
                            </Image.ToolTip>
                        </Image>
                        <Label HorizontalAlignment="Left" Width="90" Margin="182,15,0,0" Content="Họ và tên" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtHoVaTen" HorizontalAlignment="Left" Margin="274,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" TextChanged="txtHoVaTen_TextChanged"/>
                        <Label Width="112" HorizontalAlignment="Left" Margin="532,15,0,0" Content="CMND/CCCD" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCMND_CCCD" HorizontalAlignment="Left" Margin="666,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" TextChanged="txtCMND_CCCD_TextChanged"/>
                        <Label Width="125" HorizontalAlignment="Left" Margin="182,64,0,0" Content="Mã nhân viên" VerticalAlignment="Top">
                            <Label.ToolTip>
                                <ToolTip HasDropShadow="False" VerticalAlignment="Bottom">
                                    Mã nhân viên được cấp tự động, không thể thay đổi
                                </ToolTip>
                            </Label.ToolTip>
                        </Label>
                        <TextBox x:Name="txtMaNhanVien" Background="WhiteSmoke" IsEnabled="False" HorizontalAlignment="Left" Margin="309,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181">
                            <TextBox.ToolTip>
                                Mã nhân viên được cấp tự động, không thể thay đổi
                            </TextBox.ToolTip>
                        </TextBox>
                        <Label HorizontalAlignment="Left" Width="80" Margin="816,15,0,0" Content="Giới tính" VerticalAlignment="Top"/>
                        <ComboBox Name="cboGioiTinh" SelectedValuePath="Content" HorizontalAlignment="Left" Margin="899,20,0,0" VerticalAlignment="Top" Width="82" Height="25">
                            <ComboBoxItem Content="Nam"/>
                            <ComboBoxItem Content="Nữ"/>
                        </ComboBox>
                        <Label Width="94" HorizontalAlignment="Left" Margin="532,64,0,0" Content="Ngày sinh" VerticalAlignment="Top"/>
                        <DatePicker Name="dtpNgaySinh" FontSize="18" HorizontalAlignment="Left" Margin="666,70,0,0" VerticalAlignment="Top" Height="25" Width="140"/>
                        <Label Width="90" HorizontalAlignment="Left" Margin="182,115,0,0" Content="Quê quán" VerticalAlignment="Top"/>
                        <ComboBox Name="cboQueQuan" SelectedValuePath="Content" HorizontalAlignment="Left" Margin="274,120,0,0" VerticalAlignment="Top" Width="243">
                            <ComboBoxItem Content="An Giang"/>
                            <ComboBoxItem Content="Bà Rịa - Vũng Tàu"/>
                            <ComboBoxItem Content="Bắc Giang"/>
                            <ComboBoxItem Content="Bắc Kạn"/>
                            <ComboBoxItem Content="Bạc Liêu"/>
                            <ComboBoxItem Content="Bắc Ninh"/>
                            <ComboBoxItem Content="Bến Tre"/>
                            <ComboBoxItem Content="Bình Định"/>
                            <ComboBoxItem Content="Bình Dương"/>
                            <ComboBoxItem Content="Bình Phước"/>
                            <ComboBoxItem Content="Bình Thuận"/>
                            <ComboBoxItem Content="Cà Mau"/>
                            <ComboBoxItem Content="Cần Thơ"/>
                            <ComboBoxItem Content="Cao Bằng"/>
                            <ComboBoxItem Content="Đà Nẵng"/>
                            <ComboBoxItem Content="Đắk Lắk"/>
                            <ComboBoxItem Content="Đắk Nông"/>
                            <ComboBoxItem Content="Điện Biên"/>
                            <ComboBoxItem Content="Đồng Nai"/>
                            <ComboBoxItem Content="Đồng Tháp"/>
                            <ComboBoxItem Content="Gia Lai"/>
                            <ComboBoxItem Content="Hà Giang"/>
                            <ComboBoxItem Content="Hà Nam"/>
                            <ComboBoxItem Content="Hà Nội"/>
                            <ComboBoxItem Content="Hà Tĩnh"/>
                            <ComboBoxItem Content="Hải Dương"/>
                            <ComboBoxItem Content="Hải Phòng"/>
                            <ComboBoxItem Content="Hậu Giang"/>
                            <ComboBoxItem Content="Hòa Bình"/>
                            <ComboBoxItem Content="Hưng Yên"/>
                            <ComboBoxItem Content="Khánh Hòa"/>
                            <ComboBoxItem Content="Kiên Giang"/>
                            <ComboBoxItem Content="Kon Tum"/>
                            <ComboBoxItem Content="Lai Châu"/>
                            <ComboBoxItem Content="Lâm Đồng"/>
                            <ComboBoxItem Content="Lạng Sơn"/>
                            <ComboBoxItem Content="Lào Cai"/>
                            <ComboBoxItem Content="Long An"/>
                            <ComboBoxItem Content="Nam Định"/>
                            <ComboBoxItem Content="Nghệ An"/>
                            <ComboBoxItem Content="Ninh Bình"/>
                            <ComboBoxItem Content="Ninh Thuận"/>
                            <ComboBoxItem Content="Phú Thọ"/>
                            <ComboBoxItem Content="Phú Yên"/>
                            <ComboBoxItem Content="Quảng Bình"/>
                            <ComboBoxItem Content="Quảng Nam"/>
                            <ComboBoxItem Content="Quảng Ngãi"/>
                            <ComboBoxItem Content="Quảng Ninh"/>
                            <ComboBoxItem Content="Quảng Trị"/>
                            <ComboBoxItem Content="Sóc Trăng"/>
                            <ComboBoxItem Content="Sơn La"/>
                            <ComboBoxItem Content="Tây Ninh"/>
                            <ComboBoxItem Content="Thái Bình"/>
                            <ComboBoxItem Content="Thái Nguyên"/>
                            <ComboBoxItem Content="Thanh Hóa"/>
                            <ComboBoxItem Content="Thừa Thiên Huế"/>
                            <ComboBoxItem Content="Tiền Giang"/>
                            <ComboBoxItem Content="Thành phố Hồ Chí Minh"/>
                            <ComboBoxItem Content="Trà Vinh"/>
                            <ComboBoxItem Content="Tuyên Quang"/>
                            <ComboBoxItem Content="Vĩnh Long"/>
                            <ComboBoxItem Content="Vĩnh Phúc"/>
                            <ComboBoxItem Content="Yên Bái"/>
                        </ComboBox>
                        <Label Width="120" HorizontalAlignment="Left" Margin="532,115,0,0" Content="Số điện thoại" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtSoDienThoai" HorizontalAlignment="Left" Margin="666,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" TextChanged="txtSoDienThoai_TextChanged"/>
                        <Label Width="78" HorizontalAlignment="Left" Margin="182,165,0,0" Content="Bộ phận" VerticalAlignment="Top"/>
                        <TextBox Name="txtBoPhan" IsEnabled="False" Background="WhiteSmoke" HorizontalAlignment="Left" Margin="262,170,0,0" VerticalAlignment="Top" Width="192"/>
                        <Label Width="75" HorizontalAlignment="Left" Margin="473,165,0,0" Content="Chức vụ" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtChucVu" Background="WhiteSmoke" IsEnabled="False" HorizontalAlignment="Left" Margin="548,170,0,0" VerticalAlignment="Top" Width="193"/>
                        <Label Width="90" HorizontalAlignment="Left" Margin="751,165,0,0" Content="Ngày vào" VerticalAlignment="Top"/>
                        <DatePicker x:Name="dtpNgayVao" FontSize="18" HorizontalAlignment="Left" Margin="841,170,0,0" VerticalAlignment="Top" Height="25" Width="140"/>
                        <Button x:Name="btnCopyMaNhanVien" HorizontalAlignment="Left" Margin="495,70,0,0" VerticalAlignment="Top" Width="22" Height="22" Click="btnCopyMaNhanVien_Click">
                            <Image Source="/PICTURE/copyIcon.png" Margin="1"/>
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="CHẤM CÔNG">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="KHEN THƯỞNG">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="THỐNG KÊ">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="CẤU HÌNH">
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Slider x:Name="sliderFontSize" HorizontalAlignment="Right" 
                             Minimum="10" Maximum="17" Value="17"
                             Margin="0,119,204,0" Width="334"  VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"/>
                    <ComboBox Name="cboKieuChu" Width="334" VerticalAlignment="top" HorizontalAlignment="Right" Margin="0,215,204,0" />
                    <Button x:Name="btnDangXuat" Width="150" Height="40" VerticalAlignment="Bottom" Click="btnDangXuat_Click" Margin="0,0,0,127.6">
                        <TextBlock Foreground="white" Text="ĐĂNG XUẤT"/>
                    </Button>
                    <Label x:Name="lblDangNhapHienTai" Content="TÀI KHOẢN ĐĂNG NHẬP" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontWeight="SemiBold" Foreground="MediumBlue" Margin="368,465,365,181" Height="60" Width="291" />
                    <Label Name="lblThongTin" Content="This is footer" FontSize="12" Padding="15,5" 
                           VerticalAlignment="Bottom" Height="60" Margin="0" Style="{StaticResource lableFooter}"/>
                    <Label Content="Kích cỡ chữ" HorizontalAlignment="Left" Margin="144,111,0,0" VerticalAlignment="Top"/>
                    <Label Content="Kiểu chữ" HorizontalAlignment="Left" Margin="144,209,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
