<Window x:Class="QuanLyNhanSu.WaitForLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanSu"
        mc:Ignorable="d"
        AllowsTransparency="True" BorderBrush="LightGray" BorderThickness="1.5"        
        WindowStyle="None" WindowStartupLocation="CenterScreen"       
        Title="WaitForLoading" Height="200" Width="400">
    <Grid>
        <Label Content="Chương trình đang được tải, vui lòng đợi..." Foreground="MediumBlue" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="25"/>
        <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" VerticalAlignment="Center" Margin="50,50,50,25" Height = "15"   />
        <TextBlock x:Name="txbThongTin" HorizontalAlignment="Left" Margin="50,129,0,0" TextWrapping="Wrap" Text="Đang tải xử lý ...." VerticalAlignment="Top" Height="37" Width="297"/>
    </Grid>
</Window>
