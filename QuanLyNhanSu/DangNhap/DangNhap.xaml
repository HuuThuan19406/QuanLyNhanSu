<Window x:Class="BaiTapNhom.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanSu"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="220" Width="270" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
                          FontFamily="Tahoma" FontSize="15" Closing="Window_Closing">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Height="194" Width="268">
        <TextBlock Height="25" Width="100" VerticalAlignment="Top" Margin="10,15,150,115.4">Tài khoản:</TextBlock>
        <TextBox x:Name="txtTaiKhoan" VerticalAlignment="Top" FontSize="15" Height="25" Margin="100,17,20,118"/>
        <TextBlock x:Name="txbMatKhau" VerticalAlignment="Top" Height="25" Width="100" Margin="10,55,150,61.4">Mật khẩu:</TextBlock>
        <PasswordBox x:Name="pwbMatKhau" VerticalAlignment="Top" FontSize="15" Height="25" Margin="100,55,20,71"/>
        <Button x:Name="btnDangNhap" Height="32" Width="105" 
                Margin="80,100,80,25.2" VerticalAlignment="Top" Click="DangNhap_Click">
            <TextBlock Foreground="White" Text="ĐĂNG NHẬP"/>
        </Button>
        <Label Name="lblDoiMatKhau" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="12" Margin="0,140,0,0" FontStyle="Italic" MouseEnter="lblQuenMatKhau_MouseEnter" MouseLeave="lblQuenMatKhau_MouseLeave" MouseDoubleClick="lblQuenMatKhau_MouseDoubleClick">Đổi mật khẩu</Label>
    </Grid>
</Window>
